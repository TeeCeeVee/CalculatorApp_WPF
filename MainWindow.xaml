<Window x:Class="CalculatorAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorAppWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="525" Width="350">

    <Window.Resources>
        <SolidColorBrush x:Key="numbersColor" Color="DarkSlateGray"/>
        <SolidColorBrush x:Key="operationsColor" Color="Orange"/>
    </Window.Resources>
    
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Name="resultLabel"
               Content="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="50"
               Margin="0,0,0,0"
               Grid.ColumnSpan="4"/>
        <Button x:Name="acButton"
                Content="AC"
                Margin="5"
                Grid.Row="1"/>
        <Button x:Name="negativeButton"
                Content="+/-"
                Margin="5"
                Grid.Column="1"
                Grid.Row="1"/>
        <Button x:Name="percentageButton"
                Content="%"
                Margin="5"
                Grid.Column="2"
                Grid.Row="1"/>
        <Button x:Name="divisionButton"
                Background="{StaticResource operationsColor}"
                Content="/"
                Margin="5"
                Grid.Column="3"
                Grid.Row="1"
                Click="OperationButton_Click"/>
        <Button x:Name="sevenButton"
                Background="{StaticResource numbersColor}"
                Content="7"
                Margin="5"
                Grid.Row="2"
                Click="NumberButton_Click"/>
        <Button x:Name="eightButton"
                Background="{StaticResource numbersColor}"
                Content="8"
                Margin="5"
                Grid.Column="1"
                Grid.Row="2"
                Click="NumberButton_Click"/>
        <Button x:Name="nineButton"
                Background="{StaticResource numbersColor}"
                Content="9"
                Margin="5"
                Grid.Column="2"
                Grid.Row="2"
                Click="NumberButton_Click"/>
        <Button x:Name="multiplicationButton"
                Background="{StaticResource operationsColor}"
                Content="*"
                Margin="5"
                Grid.Column="3"
                Grid.Row="2"
                Click="OperationButton_Click"/>
        <Button x:Name="fourButton"
                Background="{StaticResource numbersColor}"
                Content="4"
                Margin="5"
                Grid.Row="3"
                Click="NumberButton_Click"/>
        <Button x:Name="fiveButton"
                Background="{StaticResource numbersColor}"
                Content="5"
                Margin="5"
                Grid.Column="1"
                Grid.Row="3"
                Click="NumberButton_Click"/>
        <Button x:Name="sixButton"
                Background="{StaticResource numbersColor}"
                Content="6"
                Margin="5"
                Grid.Column="2"
                Grid.Row="3"
                Click="NumberButton_Click"/>
        <Button x:Name="subtractionButton"
                Background="{StaticResource operationsColor}"
                Content="-"
                Margin="5"
                Grid.Column="3"
                Grid.Row="3"
                Click="OperationButton_Click"/>
        <Button x:Name="oneButton"
                Background="{StaticResource numbersColor}"
                Content="1"
                Margin="5"
                Grid.Row="4"
                Click="NumberButton_Click"/>
        <Button x:Name="twoButton"
                Background="{StaticResource numbersColor}"
                Content="2"
                Margin="5"
                Grid.Column="1"
                Grid.Row="4"
                Click="NumberButton_Click"/>
        <Button x:Name="threeButton"
                Background="{StaticResource numbersColor}"
                Content="3"
                Margin="5"
                Grid.Column="2"
                Grid.Row="4"
                Click="NumberButton_Click"/>
        <Button x:Name="additionButton"
                Background="{StaticResource operationsColor}"
                Content="+"
                Margin="5"
                Grid.Column="3"
                Grid.Row="4"
                Click="OperationButton_Click"/>
        <Button Name="zeroButton"
                Background="{StaticResource numbersColor}"
                Content="0"
                Margin="5"
                Grid.Row="5"
                Grid.RowSpan="5"
                Grid.ColumnSpan="2"
                Click="NumberButton_Click"/>
        <Button Name="dotButton"
                Background="{StaticResource numbersColor}"
                Content="."
                Margin="5"
                Grid.Column="2"
                Grid.Row="5"
                Click="dotButton_Click"/>
        <Button Name="equalButton"
                Background="{StaticResource operationsColor}"
                Content="="
                Margin="5"
                Grid.Column="30"
                Grid.Row="5"/>


    </Grid>
</Window>
